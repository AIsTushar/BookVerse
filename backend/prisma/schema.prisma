generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String?
  role       Role     @default(USER)
  status     Status   @default(PENDING)
  isSocial   Boolean  @default(false)
  password   String
  fcmToken   String?
  image      String?
  customerId String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Otp {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  otp       Int
  expiry    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("otps")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

enum Status {
  PENDING
  ACTIVE
  BLOCKED
}
